/* Task for getting latitude and longitude using Quectel L89H */
void gpsRead(void *parameter) {
  float lat = 0;
  float lon = 0;
  int sat = 0;

  while (true) {
    while (GPS.available() > 0) {
      if (gps.encode(GPS.read())) {
        if (gps.location.isValid()) {
          lat = (gps.location.lat() + 1);
          lon = (gps.location.lng() + 1);
          sat = (gps.satellites.value());
        }
      }
    }
    /* Passing the location and satellite data using queue to 
    'displayLocation' and 'gsmSend' tasks every 10 ticks */
    xQueueSend(gpsQueue_lat, (void *)&lat, 10);
    xQueueSend(gpsQueue_lon, (void *)&lon, 10);
    xQueueSend(gpsQueue_sat, (void *)&sat, 10);
    xQueueSend(gsmQueue_lat, (void *)&lat, 10);
    xQueueSend(gsmQueue_lon, (void *)&lon, 10);

    /* Task delay for 5000ms */
    vTaskDelay(5000 / portTICK_PERIOD_MS);
  }
}

/* Task for temperature sensing using DHT11 */
void tempRead(void *parameter) {
  int temp = 0;

  while (true) {
    /* Retrieve temperature in Celcius*/
    temp = dht.readTemperature();

    /* Display error if DHT11 failed*/
    if (isnan(temp)) {
      Serial.println(F("Failed to read from DHT sensor!"));
      return;
    }
    
    /* Passing the temperature data using queue to 
    'displayTemperature' and 'gsmSend' tasks every 10 ticks */
    xQueueSend(tempQueue, (void *)&temp, 10);
    xQueueSend(gsmQueue_temp, (void *)&temp, 10);

    /* Updating the LED status based on the threshold */
    if (temp > TEMP_THRESHOLD) {
      rgbLEDHigh();
    } else {
      rgbLEDLow();
    }
    
    /* Task delay for 5000ms*/
    vTaskDelay(5000 / portTICK_PERIOD_MS);
  }
}

/* Task for measuring vibration using ADXL335 */
void adxlRead(void *parameter) {
  int xValueCurrent = 0;
  int yValueCurrent = 0;
  int zValueCurrent = 0;
  int xValueLast = 0;
  int yValueLast = 0;
  int zValueLast = 0;
  int xChange = 0;
  int yChange = 0;
  int zChange = 0;
  int tempValue = 0;

  while (true) {
    /* Reading the analog values */
    xValueCurrent = readAxis(xInput);
    yValueCurrent = readAxis(yInput);
    zValueCurrent = readAxis(zInput);

    /* Calculating the change in current and previous values */
    xChange = (xValueCurrent - xValueLast);
    yChange = (yValueCurrent - yValueLast);
    zChange = (zValueCurrent - zValueLast);

    /* Passing the accelerometer data using queue to 
    'displayAccelerometer' and 'gsmSend' tasks every 5 ticks */
    xQueueSend(adxlQueue_x, (void *)&xChange, 5);
    xQueueSend(adxlQueue_y, (void *)&yChange, 5);
    xQueueSend(adxlQueue_z, (void *)&zChange, 5);
    xQueueSend(gsmQueue_x, (void *)&xChange, 5);
    xQueueSend(gsmQueue_y, (void *)&yChange, 5);
    xQueueSend(gsmQueue_z, (void *)&zChange, 5);

    /* Checking if change in value is below or above the threshold */
    if (abs(xChange) > ADXL_THRESHOLD || abs(yChange) > ADXL_THRESHOLD || abs(zChange) > ADXL_THRESHOLD) {
      rgbLEDHigh();
    } else {
      rgbLEDLow();
    }

    /* Storing the current value as last value*/
    xValueLast = xValueCurrent;
    yValueLast = yValueCurrent;
    zValueLast = zValueCurrent;
    
    /* Task delay for 50ms*/
    vTaskDelay(50 / portTICK_PERIOD_MS);
  }
}

