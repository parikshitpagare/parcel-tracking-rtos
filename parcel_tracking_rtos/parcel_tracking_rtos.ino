/* Task for changing OLED display mode using push button */
void displayButton(void *parameter) {
  int buttonState;
  int debounceDelay = 200;

  while (true) {
    int buttonState = digitalRead(button);
    vTaskDelay(debounceDelay / portTICK_PERIOD_MS);

    if (buttonState == LOW) {
      oledDisplayState++;
      if (oledDisplayState > 2) {
        oledDisplayState = 0;
      }
    } 
    else if (buttonState == HIGH) {
      /* Do nothing */
    }
  }
}

