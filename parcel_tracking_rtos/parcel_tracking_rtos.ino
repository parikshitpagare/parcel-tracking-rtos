void gsmSend(void *parameter) {
  String url, lat, lon, temp, vibX, vibY, vibZ;
  float latValue;
  float lonValue;
  int tempValue;
  int xChangeValue;
  int yChangeValue;
  int zChangeValue;

  while (true) {
    /* Receiving the location data via queue from 
    'gpsRead' task every 0 ticks */
    xQueueReceive(gsmQueue_lat, (void *)&latValue, 0);
    xQueueReceive(gsmQueue_lon, (void *)&lonValue, 0);
    
    /* Receiving the temperature data via queue from 
    'tempRead' task every 0 ticks */
    xQueueReceive(gsmQueue_temp, (void *)&tempValue, 0);
    
    /* Receiving the accelerometer data via queue from 
    'adxlRead' task every 0 ticks */
    xQueueReceive(gsmQueue_x, (void *)&xChangeValue, 0);
    xQueueReceive(gsmQueue_y, (void *)&yChangeValue, 0);
